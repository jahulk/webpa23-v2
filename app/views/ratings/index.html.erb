<h1>List of ratings</h1>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-lg-3">
      <h2>Best beers</h2>
      <table class="table">
        <thead>
        <tr>
          <th>Beer</th>
          <th>Average</th>
        </tr>
        </thead>
        <tbody>
        <% @best_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= round(beer.average_rating) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3">
      <h2>Best breweries</h2>
      <table class="table">
        <thead>
        <tr>
          <th>Beer</th>
          <th>Average</th>
        </tr>
        </thead>
        <tbody>
        <% @best_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= round(beer.average_rating) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3">
      <h2>Best styles</h2>
      <table class="table">
        <thead>
        <tr>
          <th>Style</th>
          <th>Average</th>
        </tr>
        </thead>
        <tbody>
        <% @best_styles.each do |style| %>
          <tr>
            <td><%= style.name %></td>
            <td><%= round(style.average_rating) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<h2>Most active users </h2>
<ol>
  <% @most_active_users.each do |user| %>
    <li>
      <%= user.username %>
      <%= pluralize(user.ratings.count, 'rating') %>
    </li>
  <% end %>
</ol>

<h2>Recent ratings </h2>
<ul>
  <% @recent_ratings.each do |rating| %>
    <li>
      <%= rating.to_s %>
      <%= rating.created_at %>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to "New rating", new_rating_path, class: 'btn btn-primary' %>
</p>