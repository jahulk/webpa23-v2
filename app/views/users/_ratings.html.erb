<div data-controller="ratings" class="ratings mb-4">
  <%= turbo_frame_tag "ratings" do %>
    <% @user.ratings.each do |rating| %>
      <div class="rating">
        <% if @user == current_user %>
          <input type="checkbox" name="ratings[]" value="<%= rating.id %>"/>
        <% end %>
        <span>
        <%= link_to rating.to_s, rating, data: { turbo_frame: 'rating_details' } %>
        </span>
      </div>
    <% end %>
    <p><label>select all <input type="checkbox" id="select_all" data-action="ratings#selectAll"></label></p>
    <% if @user == current_user %>
      <button data-action="ratings#destroy">Delete selected</button>
    <% end %>
  <% end %>
</div>