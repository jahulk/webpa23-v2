<div data-controller="breweries">
  <%= form_with(model: brewery, data: { action: "turbo:submit-end->breweries#reset" }) do |form| %>
    <% if brewery.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>

        <ul>
          <% brewery.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, data: { "breweries-target": "name" } %>
    </div>

    <div>
      <%= form.label :year, style: "display: block" %>
      <%= form.number_field :year, data: { "breweries-target": "year" } %>
    </div>

    <div>
      <%= form.label :active %>
      <%= form.check_box :active, data: { "breweries-target": "active" } %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
