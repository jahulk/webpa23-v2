<h1>Styles</h1>

<div id="styles">
  <ul class="list-group list-group-flush">
    <%= turbo_frame_tag "styles" do %>
      <% @styles.each do |style| %>
        <li class="list-group-item">
          <%= link_to style.name, style, data: { turbo_frame: "style_details" } %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= turbo_frame_tag "style_details" do %>
  <% end %>
</div>

